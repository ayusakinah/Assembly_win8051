ORG 0H

SATU:
MOV     P2,#11111110B
JB      P2.4,DUA
MOV     P1,#01111001B
LJMP    SATU

DUA:
JB      P2.5,TIGA
MOV     P1,#00100100B
LJMP    SATU

TIGA:
JB      P2.6,EMPAT
MOV     P1,#00110000B
LJMP    SATU

DOWN:
LJMP    EMPAT

EMPAT:
MOV     P2.1,#11110011B
JB      P2.4,LIMA
MOV     P1.1,#01111001B
LJMP    EMPAT

LIMA:
JB      P2.5,ENAM
MOV     P1.1,#00100100B
LJMP    EMPAT

ENAM:
JB      P2.6,EMPAT
MOV     P1.1,#00110000B
LJMP    EMPAT

END